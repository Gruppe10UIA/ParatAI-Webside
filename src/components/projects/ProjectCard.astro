---
import type { CollectionEntry } from 'astro:content';
import '../../styles/components/project-card.css';
interface Props { entry: CollectionEntry<'projects'> }
const { entry } = Astro.props;
const { data } = entry;
---

<div class="project-card">
  {data.image && (
    <div class="project-card__image-container">
      <img src={data.image} alt={data.title} class="project-card__image" />
    </div>
  )}
  <div class="project-card__content">
    <h2 class="project-card__title">{data.title}</h2>
    {data.description && <p class="project-card__description">{data.description}</p>}
    {data.tags?.length && (
      <ul class="project-card__tags">
        {data.tags.map((tag: string) => (
          <li class="project-card__tag">{tag}</li>
        ))}
      </ul>
    )}
    {data.link && (
      <a href={data.link} target="_blank" rel="noopener noreferrer" class="project-card__link">
        Visit Project
      </a>
    )}
  </div>
</div>
