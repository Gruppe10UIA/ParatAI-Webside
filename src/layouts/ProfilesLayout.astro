---
interface Props {
  data: {
    name?: string;
    title?: string;
    avatar?: string;
    location?: string;
    github?: string;
    linkedin?: string;
    tags?: string[];
    slug?: string;
  };
}

const { data } = Astro.props;
---

<article class="mx-auto max-w-3xl p-6">
  <header class="flex items-center gap-4 mb-6">
    {data.avatar && (
      <img
        src={data.avatar}
        alt={data.name}
        width="96"
        height="96"
        class="h-24 w-24 rounded-full object-cover border"
        loading="lazy"
      />
    )}
    <div>
      <h1 class="text-3xl font-bold leading-tight">{data.name}</h1>
      {data.title && <p class="text-slate-600">{data.title}</p>}
      <div class="mt-2 flex flex-wrap gap-3 text-sm text-slate-600">
        {data.location && <span>📍 {data.location}</span>}
        {data.github && (
          <a class="underline hover:no-underline" href={data.github} target="_blank" rel="noopener noreferrer">GitHub</a>
        )}
        {data.linkedin && (
          <a class="underline hover:no-underline" href={data.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>
        )}
      </div>